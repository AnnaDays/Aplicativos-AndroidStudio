<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="460dp"
        android:layout_height="729dp"
        android:background="#00E8E4"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="1dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="163dp"
                android:layout_height="55dp"
                android:background="#048D8B"
                android:backgroundTint="#048D8B"
                app:srcCompat="@drawable/ana_quiz_placas" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#048E8C" />

        </LinearLayout>

        <Space
            android:layout_width="427dp"
            android:layout_height="77dp" />

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="306dp"
            android:layout_height="388dp"
            android:layout_gravity="center"
            app:srcCompat="@drawable/quiz_de_tr_nsito" />

        <Button
            android:id="@+id/btnIniciar"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:backgroundTint="#048D8B"
            android:fontFamily="@font/montserrat_bold"
            android:onClick="telaDois"
            android:text="Iniciar"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textStyle="bold"
            app:cornerRadius="12dp" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_semibold"
            android:gravity="center"
            android:text="Â©By Ana Luiza Dias"
            android:textColor="#FFFFFF"
            android:textSize="11sp"
            android:textStyle="bold" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>