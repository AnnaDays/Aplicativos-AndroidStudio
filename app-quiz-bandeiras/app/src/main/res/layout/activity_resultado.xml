<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0D80F1"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="460dp"
        android:layout_height="729dp"
        android:background="#0D81F2"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="1dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView8"
                android:layout_width="186dp"
                android:layout_height="match_parent"
                android:background="#09427A"
                app:srcCompat="@drawable/bandeira_png" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="58dp"
                android:background="#09427A" />

        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="28dp"
            android:background="#0D7FF2" />

        <EditText
            android:id="@+id/editTextText6"
            android:layout_width="159dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:backgroundTint="#FFFFFF"
            android:ems="10"
            android:fontFamily="@font/montserrat_bold"
            android:gravity="center"
            android:inputType="text"
            android:text="RANKING ðŸ†"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="20dp" />

        <EditText
            android:id="@+id/txtUsuario"
            android:layout_width="171dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:backgroundTint="#FFFFFF"
            android:ems="10"
            android:fontFamily="@font/montserrat_bold"
            android:gravity="center"
            android:inputType="text"
            android:lineSpacingExtra="34sp"
            android:textSize="22sp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="46dp" />

        <TextView
            android:id="@+id/txtPontos"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="#09427A"
            android:fontFamily="@font/montserrat_bold"
            android:gravity="center"
            android:text="Seu resultado"
            android:textColor="#FFFFFF"
            android:textSize="34sp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="48dp" />

        <ImageView
            android:id="@+id/imgvResultado"
            android:layout_width="278dp"
            android:layout_height="210dp"
            android:layout_gravity="center"
            app:srcCompat="@drawable/anachorando" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="81dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="211dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="254dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <Button
                    android:id="@+id/btnSair3"
                    android:layout_width="140dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:backgroundTint="#09427A"
                    android:fontFamily="@font/montserrat_bold"
                    android:text="Sair"
                    android:textColor="#FFFFFF"
                    app:cornerRadius="12dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <Button
                    android:id="@+id/btnReiniciar"
                    android:layout_width="140dp"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#09427A"
                    android:fontFamily="@font/montserrat_bold"
                    android:text="Reiniciar"
                    android:textColor="#FFFFFF"
                    app:cornerRadius="12dp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>