<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="460dp"
        android:layout_height="729dp"
        android:background="#0D81F2"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="1dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView8"
                android:layout_width="186dp"
                android:layout_height="match_parent"
                android:background="#09427A"
                app:srcCompat="@drawable/bandeira_png" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="58dp"
                android:background="#09427A" />

        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="22dp"
            android:background="#0D7FF2" />

        <TextView
            android:id="@+id/txtPergunta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_bold"
            android:gravity="center"
            android:text="Q1 - Qual o nome desse País?"
            android:textColor="#FFFFFF"
            android:textSize="16sp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="27dp" />

        <ImageView
            android:id="@+id/imgvBandeira"
            android:layout_width="match_parent"
            android:layout_height="186dp"
            app:srcCompat="@drawable/brasil" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="30dp" />

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <RadioButton
                android:id="@+id/rdbOpcao1"
                android:layout_width="366dp"
                android:layout_height="59dp"
                android:layout_gravity="center"
                android:backgroundTint="#FFFFFF"
                android:buttonTint="#F6F3F3"
                android:fontFamily="@font/montserrat_semibold"
                android:text="Brasil"
                android:textColor="#FFFFFF"
                android:textSize="16sp" />

            <RadioButton
                android:id="@+id/rdbOpcao2"
                android:layout_width="366dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:buttonTint="#FDFDFD"
                android:fontFamily="@font/montserrat_semibold"
                android:text="Brazil"
                android:textColor="#FFFFFF"
                android:textSize="16sp" />
            <RadioButton
                android:id="@+id/rdbOpcao3"
                android:layout_width="366dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:buttonTint="#FDFDFD"
                android:fontFamily="@font/montserrat_semibold"
                android:text="República Federativa do Brasil"
                android:textColor="#FFFFFF"
                android:textSize="16sp" />
            <RadioButton
                android:id="@+id/rdbOpcao4"
                android:layout_width="366dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:buttonTint="#FDFDFD"
                android:fontFamily="@font/montserrat_semibold"
                android:text="Estados Unidos do Brasil"
                android:textColor="#FFFFFF"
                android:textSize="16sp" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="30dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="211dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="254dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/btnSair2"
                        android:layout_width="140dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:backgroundTint="#09427A"
                        android:fontFamily="@font/montserrat_bold"
                        android:gravity="center"
                        android:text="Sair"
                        android:textColor="#FFFFFF"
                        app:cornerRadius="12dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/btnResponder"
                        android:layout_width="140dp"
                        android:layout_height="wrap_content"
                        android:backgroundTint="#09427A"
                        android:fontFamily="@font/montserrat_bold"
                        android:gravity="center"
                        android:text="Responder"
                        android:textColor="#FFFFFF"
                        app:cornerRadius="12dp" />
                </LinearLayout>
            </LinearLayout>
        </RadioGroup>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>